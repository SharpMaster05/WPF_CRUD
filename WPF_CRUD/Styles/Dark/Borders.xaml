<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">

    <Style x:Key="MenuBorder" TargetType="Border">
        <Setter Property="Width" Value="50"/>
        <Setter Property="Background" Value="{DynamicResource SecondaryBackground}"/>
        <Setter Property="HorizontalAlignment" Value="Left"/>
    </Style>
    
    <Style x:Key="RightMenuBorder" TargetType="Border">
        <Setter Property="Width" Value="0"/>
        <Setter Property="HorizontalAlignment" Value="Right"/>
        <Setter Property="Background" Value="{DynamicResource Black}"/>
        <Setter Property="Panel.ZIndex" Value="-1"/>
    </Style>

    <Style x:Key="TextBoxBorder" TargetType="Border">
        <Setter Property="Background" Value="{DynamicResource SecondaryBackground}"/>
        <Setter Property="CornerRadius" Value="20"/>
        <Setter Property="Padding" Value="15,0"/>
        <Setter Property="Height" Value="40"/>
        <Setter Property="Margin" Value="0,10"/>
    </Style>
    
    <Style x:Key="TextBlockBorder" TargetType="Border">
        <Setter Property="Background" Value="{DynamicResource SecondaryBackground}"/>
        <Setter Property="CornerRadius" Value="15"/>
        <Setter Property="Padding" Value="15,0"/>
        <Setter Property="Height" Value="30"/>
        <Setter Property="Grid.ColumnSpan" Value="3"/>
        <Setter Property="HorizontalAlignment" Value="Left"/>
    </Style>

    <Style x:Key="ImageBorder" TargetType="Border">
        <Setter Property="Width" Value="100"/>
        <Setter Property="Height" Value="100"/>
        <Setter Property="HorizontalAlignment" Value="Center"/>
        <Setter Property="CornerRadius" Value="50"/>
        <Setter Property="BorderBrush" Value="{DynamicResource PrimaryForeground}"/>
        <Setter Property="BorderThickness" Value="1"/>
    </Style>
    
    <Style x:Key="ItemImageBorder" TargetType="Border">
        <Setter Property="Width" Value="80"/>
        <Setter Property="Height" Value="80"/>
        <Setter Property="CornerRadius" Value="40"/>
        <Setter Property="VerticalAlignment" Value="Top"/>
        <Setter Property="Margin" Value="0,5"/>
    </Style>
</ResourceDictionary>