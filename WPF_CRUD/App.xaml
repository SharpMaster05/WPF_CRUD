<Application x:Class="WPF_CRUD.App"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:local="clr-namespace:WPF_CRUD.Infrastucture"
             StartupUri="Views/Windows/MainWindow.xaml">
    <Application.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="Styles/AppColors.xaml"/>
                <ResourceDictionary Source="Styles/AppFonts.xaml"/>
                <ResourceDictionary Source="Styles/Dark/Buttons.xaml"/>
                <ResourceDictionary Source="Styles/Dark/Borders.xaml"/>
                <ResourceDictionary Source="Styles/Dark/ComboBox.xaml"/>
                <ResourceDictionary Source="Styles/Dark/TextBlocks.xaml"/>
                <ResourceDictionary Source="Styles/Dark/TextBoxes.xaml"/>
                <ResourceDictionary Source="Styles/Dark/ScrollViewer.xaml"/>
            </ResourceDictionary.MergedDictionaries>

            <local:DiContainer x:Key="DiContainer"/>
        </ResourceDictionary>
    </Application.Resources>
</Application>
